{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "routes/user.js",
      "use": "@vercel/node"
    },
    {
      "src": "routes/tips.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/users",
      "dest": "/routes/user.js"
    },
    {
      "src": "/tip/(.*)",
      "dest": "/routes/tips.js"
    },
    {
      "src": "/tip/:id/like",
      "dest": "/routes/tips.js"
    },
    {
      "src": "/tip/:id/dislike",
      "dest": "/routes/tips.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ]
}
